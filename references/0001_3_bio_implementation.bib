@article{Namburi2016,
  title={A Circuit Mechanism for Differentiating Positive and Negative Associations},
  author={Namburi, Praneeth and Al-Hasani, Ream and Calhoon, Gwendolyn G. and Bruchas, Michael R. and Tye, Kay M.},
