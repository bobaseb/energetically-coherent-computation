}

@article{Goldwyn2016Neuronal,
  title={Neuronal coupling by endogenous electric fields: Cable theory and applications to coincidence detector neurons in the auditory brainstem},
  author={Goldwyn, Joshua H. and Rinzel, John},
  journal={Journal of Neurophysiology},
  volume={115},
  number={4},
  pages={2033--2051},
  year={2016},
