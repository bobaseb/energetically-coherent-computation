  % Abstract: In "Paths Toward a Clearing," Michael Jackson advocates for a radical empiricist approach to ethnography, emphasizing the importance of lived experience and subjective engagement in anthropological research. He critiques detached, objective methodologies and argues for an approach that acknowledges the fluid and dynamic nature of human life. The book combines theoretical discussions with personal narratives to illustrate the potential of an experiential approach to understanding culture and society.
}

@book{Lakoff1999,
  author    = {George Lakoff and Mark Johnson},
  title     = {Philosophy in the Flesh: The Embodied Mind and Its Challenge to Western Thought},
  publisher = {Basic Books},
  year      = {1999},
  note      = {ISBN: 9780465056743}
  % Abstract: In "Philosophy in the Flesh," George Lakoff and Mark Johnson argue that human cognition is fundamentally shaped by the body's interactions with the world. They challenge traditional Western philosophical views that separate mind and body, proposing instead that reason, concepts, and language are all grounded in embodied experience. The book explores how metaphors, rooted in physical and sensory experiences, structure our understanding and reasoning across various domains.
}

@book{Leder1990,
  author    = {Drew Leder},
  title     = {The Absent Body},
  publisher = {University of Chicago Press},
  year      = {1990},
  note      = {ISBN: 9780226470001}
  % Abstract: Drew Leder's "The Absent Body" examines the paradox of the body's presence and absence in human experience. While the body is the center of perception and action, it often recedes from conscious awareness, becoming "absent" as attention focuses outward. Leder explores this phenomenon through various contexts, including pain, illness, and meditation, highlighting how the body emerges into awareness and the implications of this dynamic for understanding human existence.
}

@book{Marchand2010,
  author    = {Timothy H. J. Marchand},
  title     = {Making Knowledge: Explorations of the Indissoluble Relation Between Mind, Body, and Environment},
