}

@book{Thompson2007,
  author    = {Evan Thompson},
  title     = {Mind in Life: Biology, Phenomenology, and the Sciences of Mind},
  publisher = {Harvard University Press},
  year      = {2007},
  note      = {ISBN: 9780674025111}
  % Abstract: In "Mind in Life," Evan Thompson bridges the gap between biology and phenomenology, arguing that mind and life are fundamentally connected. He proposes that cognitive processes are best understood as enactive, arising through the dynamic interactions between an organism and its environment. Thompson integrates insights from neuroscience, philosophy, and psychology to present a comprehensive framework that challenges traditional cognitive science perspectives. [Source: Harvard University Press](https://www.hup.harvard.edu/catalog.php?isbn=9780674057517)
}

@book{Varela1991,
  author    = {Francisco J. Varela and Evan Thompson and Eleanor Rosch},
