  note      = {ISBN: 9781444337472}
  % Abstract: "Making Knowledge," edited by Timothy H. J. Marchand, is a collection of essays that investigate the interconnectedness of mind, body, and environment in the production of knowledge. The contributors draw from anthropology, philosophy, and cognitive science to explore how skills, practices, and material engagements shape understanding. The book emphasizes the embodied and situated nature of knowledge, challenging abstract and disembodied conceptions of cognition.
}

@book{MerleauPonty1962,
  author    = {Maurice Merleau-Ponty},
  title     = {Phenomenology of Perception},
  publisher = {Routledge \& Kegan Paul},
  year      = {1962},
  note      = {ISBN: 9780415278416}
  % Abstract: In "Phenomenology of Perception," Maurice Merleau-Ponty presents a detailed examination of perception as the foundational aspect of human experience. He argues that perception is an active, embodied process through which individuals engage with the world, challenging Cartesian dualism and emphasizing the inseparability of mind and body. The work delves into topics such as the lived body, spatiality, and the pre-reflective basis of knowledge, establishing Merleau-Ponty as a central figure in phenomenology. [Source: Wikipedia](https://en.wikipedia.org/wiki/Phenomenology_of_Perception)
}

@book{Noe2004,
  author    = {Alva Noë},
  title     = {Action in Perception},
  publisher = {MIT Press},
  year      = {2004},
  note      = {ISBN: 9780262140881}
