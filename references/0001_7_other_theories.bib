}

@article{Suzuki2020,
  author = {Suzuki, Mototaka and Larkum, Matthew E.},
  title = {General Anesthesia Decouples Cortical Pyramidal Neurons},
  journal = {Cell},
  year = {2020},
  volume = {180},
  number = {4},
  pages = {666--676.e13},
  note = {DOI: 10.1016/j.cell.2020.01.024}
