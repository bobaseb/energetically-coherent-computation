  publisher = {MIT Press},
  year      = {1991},
  note      = {ISBN: 9780262720212}
  % Abstract: "The Embodied Mind" pioneers the approach of embodied cognition, emphasizing the role of bodily experience in shaping the mind. Varela, Thompson, and Rosch argue that cognition arises from the dynamic interaction between an organism and its environment, challenging traditional computational models of the mind. The book also explores the connections between cognitive science and human experience, incorporating perspectives from phenomenology and Buddhist philosophy. [Source: Mind \& Life Institute](https://www.mindandlife.org/books/embodied-mind-cognitive-science-human-experience/)
}

@article{Lamme2006,
  author    = {Victor A. F. Lamme},
  title     = {Towards a true neural stance on consciousness},
  journal   = {Trends in Cognitive Sciences},
  year      = {2006},
  volume    = {10},
  number    = {11},
  pages     = {494--501},
  note      = {DOI: 10.1016/j.tics.2006.09.001}
  % Abstract: Victor A. F. Lamme discusses the neural basis of consciousness, emphasizing the importance of recurrent processing in the brain. He argues that while feedforward processing allows for basic visual recognition, conscious experience arises from recurrent interactions between different cortical areas. Lamme suggests that understanding these neural dynamics is crucial for developing a comprehensive theory of consciousness. [Source: Trends in Cognitive Sciences](https://home.cs.colorado.edu/~mozer/Teaching/syllabi/3702/readings/Lamme2003.pdf)
}

@article{Lamme2000,
  author    = {Victor A. F. Lamme and Pieter R. Roelfsema},
  title     = {The distinct modes of vision offered by feedforward and recurrent processing},
  journal   = {Trends in Neurosciences},
  year      = {2000},
