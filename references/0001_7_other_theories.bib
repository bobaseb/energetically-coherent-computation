}

@article{Larkum2009,
  author = {Larkum, Matthew E. and Nevian, Thomas and Sandler, Maya and Polsky, Alon and Schiller, Jackie},
  title = {Synaptic Integration in Tuft Dendrites of Layer 5 Pyramidal Neurons: A New Unifying Principle},
