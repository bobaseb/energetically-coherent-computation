  number    = {2},
  pages     = {372--383},
  note      = {DOI: 10.1016/j.concog.2010.03.006}
  % Abstract: This review examines event-related potential (ERP) studies to identify neural correlates of visual awareness. The authors discuss specific ERP components, such as the visual awareness negativity (VAN) and the late positivity (LP), which are associated with conscious visual perception. The review highlights how these components differ in timing and scalp distribution, suggesting distinct neural processes underlying the emergence of visual awareness. The authors also consider methodological factors and propose directions for future research in the field.
}

@article{Montemayor2019,
  author    = {Carlos Montemayor and Harry H. Haladjian},
  title     = {Recurrent processing theory versus global neuronal workspace theory: a comment on 'The relationship between attention and consciousness: an expanded taxonomy and implications for "no-report" paradigms' by Pitts et al.},
