  number = {5941},
  pages = {756--760},
  note = {DOI: 10.1126/science.1171958}
  % Abstract: This study investigates how tuft dendrites of layer 5 pyramidal neurons integrate synaptic inputs. The authors demonstrate that these dendrites can generate local calcium spikes in response to distal synaptic inputs, which can subsequently influence neuronal output by triggering bursts of action potentials. This mechanism allows for the integration of distal and proximal inputs, providing a unifying principle for synaptic integration in these neurons.
}

@article{Larkum2013,
  author = {Larkum, Matthew},
  title = {A Cellular Mechanism for Cortical Associations: An Organizing Principle for the Cerebral Cortex},
  journal = {Trends in Neurosciences},
